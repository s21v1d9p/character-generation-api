# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
API_KEY=your_secure_api_key_here
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/character_gen

# RunPod Configuration
RUNPOD_API_KEY=your_runpod_api_key
RUNPOD_ENDPOINT_ID=your_endpoint_id

# ComfyUI Configuration
COMFYUI_URL=ws://localhost:8188/ws
COMFYUI_HTTP_URL=http://localhost:8188

# Storage Configuration (s3 or supabase)
STORAGE_PROVIDER=s3

# S3 Configuration (if STORAGE_PROVIDER=s3)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET=character-gen-assets

# Supabase Configuration (if STORAGE_PROVIDER=supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_key
SUPABASE_BUCKET=character-gen-assets

# LoRA Configuration
LORA_OUTPUT_DIR=/models/loras
LORA_TRAINING_STEPS=1500
LORA_LEARNING_RATE=1e-4
LORA_TRAINING_SCRIPT=  # Optional: custom training script path (defaults to kohya_ss)

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0

# Base Models
SDXL_MODEL_PATH=/models/checkpoints/sd_xl_base_1.0.safetensors
SVD_MODEL_PATH=/models/checkpoints/svd_xt_1_1.safetensors
